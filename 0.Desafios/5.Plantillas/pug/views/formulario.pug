extends inicio.pug
block campos
    
    h1(style={color: 'darkolivegreen'})='Ingrese Productos'
    br
    form(action="/productos" method="post" name="productos")
        div(class="form-group")
            label(for='title')='Nombre'
                input(
                    type='text'
                    placeholder="Computadora" 
                    id="title" 
                    name="title" 
                    class="form-control" 
                    required
                )
        div(class="form-group")
            label(for='price')='Precio'
                input(
                    type='number'
                    placeholder="999" 
                    id="price" 
                    name="price" 
                    class="form-control" 
                    required
                )
        div(class="form-group")
            label(for='thumbnail')='Foto URL'
                input(
                    type='text'
                    placeholder="Foto" 
                    id="thumbnail" 
                    name="thumbnail" 
                    class="form-control" 
                    required
                )
        button='Enviar'
    block tabla