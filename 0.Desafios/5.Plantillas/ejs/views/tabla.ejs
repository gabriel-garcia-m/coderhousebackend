<h2 style="color:darkred;">Vista de Productos</h2>

<% if(prodTemp.length > 0) { %>
  <div class="table-responsive">
    <table class="table table-dark">
      <tr style="color: greenyellow;">
        <th>Nombre</th>
        <th>Precio</th>
        <th>Foto</th>
      </tr>
      <% for (const prod of prodTemp) {%>
      <tr>
        <td><%=prod.title%></td>
        <td><%=prod.price%></td>
        <td><img height="80" width="80" src= <%=prod.thumbnail%> > </td>
      </tr>
      <%};%>
    </table>
  </div>
<%}else{%>
  <h3 class="alert alert-danger">No se encontraron productos</h3>
<%};%>