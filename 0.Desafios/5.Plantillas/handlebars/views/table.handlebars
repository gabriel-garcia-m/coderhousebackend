<h2 style="color:darkred;">Vista de Productos</h2>

{{#if prodTemp}}
  <div class="table-responsive">
    <table class="table table-dark">
      <tr style="color: greenyellow;">
        <th>Nombre</th>
        <th>Precio</th>
        <th>Foto</th>
      </tr>
      {{#each prodTemp}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.price}}</td>
          <td><img height="80" width="80" src={{this.thumbnail}} /></td>
        </tr>
      {{/each}}
    </table>
  </div>
{{else}}
  <h3 class="alert alert-danger">No se encontraron productos</h3>
{{/if}}